
{
"name":"Responder v01.00",

"main":"controller",
"log_xmit": true,
"controller":"controller",
"log_svc"   :"remote_log",

"comment" : "This is the responder version of the json parm file",

"defaults": { 
    "log_svc"   :"remote_log",
    
    "q_in_size":10,
    "q_out_size":10,
    
    "ir_remote": "ir_remote",    "ir_remote note": "change to input_device?",
    
    "lcd_col_cnt":20,  "lcd_todo": "get this info from remote Controller",
    "lcd_row_cnt":4,
    
    "i2c_bus"    :0,
    "i2c_sda_pin":20, 
    "i2c_scl_pin":21,
    "ic2_freq"   :100000,
    
    "ic2_responder_addr" : 65
    
    },

"services": [
    {"name":"controller",     "module":"service_responder",  "q_out_size":50, "i2c_svc":"i2c_svc" },
         
    {"name":"i2c_svc",        "module":"svc_i2c_responder",  "q_in_size":1000,  "print_log":1 },
        
    {"name":"remote_log",     "module":"service_print",      "q_in_size":1000,  "print_log":1 },
        
    {"name":"0x41_mem_use", "module":"service_mem_use"   }
         
    ]
}
